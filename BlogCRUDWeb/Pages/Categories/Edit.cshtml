@page "{id:Guid}"
@model BlogCRUDWeb.Pages.Categories.EditModel
@{
}


<form method="post">
    <h1 class="mb-3">
        Edit Employee
    </h1>
    <div class="mb-3">
        <input type="hidden" class="form-control" asp-for="EditCategoryRequest.Id" readonly />
    </div>
    <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control"  asp-for="EditCategoryRequest.Name"/>
    </div>
    <div class="mb-3 d-flex justify-content-between">
        <button type="submit" class="btn btn-primary" asp-page-handler="Update">
            Update
        </button>
        <button type="submit" class="btn btn-danger" asp-page-handler="Delete">
            Delete
        </button>
    </div>
</form>